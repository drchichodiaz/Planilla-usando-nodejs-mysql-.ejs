<%- include layouts/header.ejs %>

<div class="container">
  <br>
  <br>
  <div class="col-md-5">
    <form action="/empleados/correo" method="post" >
      <div>
        <fieldset>
          <div class="form-group">
            <label for="remitente" >from:</label>
            <input type="email" name="remitente" class="form-control" id="remitente">
          </div>
          <div class="form-group">
            <label for="destinatario" class="control-label">Destinatario:</label>
            <input type="text" name="destinatario" class="form-control" id="destinatario">
          </div>
          <div class="form-group">
            <label for="asunto" class="control-label">Asunto:</label>
            <input type="text" name="asunto" class="form-control" id="asunto">
          </div>
          <div class="form-group">
            <label for="info">descripcion</label>
            <textarea class="form-control" name="info" rows="3" id="info"></textarea>
         </div>
        </fieldset>

       <div class="form-group">
             <input type="file" name="f" id="f" >
       </div>
         <input type="submit" id="btn-submit" value="Enviar" class="btn btn-primary btn-block" >
      </div>
    </form>
  </div>
  <br>
  <br>
  <br>
  <br>
  <br>
    <h2><%=(locals.title) ? title :''%></h2>
</div>
